<% unless @day -%>
<h1>Assignments</h1>

<p>Please select a day from the left.</p>
<% else -%>
<h1>Assignments for <%= @day %></h1>

<% if @tasks.empty? -%>
<p>No tasks found.</p>
<% else -%>
<table id="assignments">
	<tr>
		<th><%= link_to_toggle_order 'Start', 'start_time', @order %></th>
		<th><%= link_to_toggle_order 'End', 'end_time', @order %></th>
		<th><%= link_to_toggle_order 'Hours', 'hours', @order %></th>
		<th><%= link_to_toggle_order 'Task', 'name', @order %></th>
		<th>Slots</th>
		<th>Assignment</th>
	</tr>
<%= render :partial => 'task', :collection => @tasks %>
</table>

<div id="hours_box" style="display:none"></div>
<div id="users_box" style="display:none">
	<%= user_search_input params[:search], 'users', :id => 'search_users' %>
	<div id="users"></div>
</div>
<% end end -%>