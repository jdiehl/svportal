	<div class="box">
		<div class="title">Tasks</div>
<% @conference.days.each do |day| -%>
		<p class="right"><%= day.tasks_count %></p>
		<%= selectable_link_to day, day == @day, :action => 'index', :id => day.id %>
<% end -%>
	</div>
	
	<div class="box">
		<div class="title">Search</div>
		<%= search_input @search, 'main' %>
	</div>
	
	<div class="box">
		<div class="title">Actions</div>
		<%= selectable_link_to 'Create new Task', (controller.action_name == 'edit' and params[:id].nil?), :action => 'edit', :id => nil %>
	</div>